extends layout2

block content
  br
  h2.text-center Dashboard
  hr
  table.table.table-striped
    tr
      th ID
      th project name
      th service
      th
      th
    each row, i in rows
      tr
        td #{row.id}
        td #{row.title}
        td #{row.service}
        td
          a.btn.btn-primary(href='/admin/edit/'+row.id) EDIT
        td
          a.btn.btn-danger(href='#' class='deleteProject' data-id=row.id) DELETE
  script(src='vendor/jquery/jquery.min.js')
  script(src='/vendor/bootstrap/js/bootstrap.min.js')
  script(src='/javascripts/dashboard.js')
