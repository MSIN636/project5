extends layout2

block content
  .container
    if errors
      ul.errors
        each error, i in errors
          li.alert.alert-danger #{error.msg}
    br
    h2.text-center New Project
    hr
    .container
      .row
        .col-md-3
        .col-md-6
          .container
            form(method="POST", action="/admin/new",  enctype = "multipart/form-data")
              .form-group
                input.form-control(type='text', name ='title', placeholder='Title')
              .form-group
                textarea.form-control(type='text', name='description', placeholder='Description')
              .form-group
                input.form-control(type='text', name = 'service', placeholder='Service')
              .form-group
                input.form-control(type='text', name = 'client', placeholder='Client')
              .form-group
                label Project Image
                input.form-control(type='file', name='projectimage')
              .form-group
                input.form-control(type='date', name='projectdate')
              p.text-center
                button.btn.btn-primary(type='submit') Submit
