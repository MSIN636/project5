extends layout2

block content
  .container
    if errors
      ul.errors
        each error, i in errors
          li.alert.alert-danger #{error.msg}
    br
    h2.text-center New Project
    hr
    .container
      .row
        .col-md-3
        .col-md-6
          .container
            form(method="POST", action="/admin/edit/"+row.id,  enctype = "multipart/form-data")
              .form-group
                input.form-control(type='text', name ='title', placeholder='Title', value=row.title)
              .form-group
                textarea.form-control(type='text', name='description', placeholder='Description')
                  !=row.description
              .form-group
                input.form-control(type='text', name = 'service', placeholder='Service', value=row.service)
              .form-group
                input.form-control(type='text', name = 'client', placeholder='Client', value=row.client)
              .form-group
                label Project Image
                input.form-control(type='file', name='projectimage', value = row.image)
              .form-group
                input.form-control(type='date', name='projectdate' value = moment(row.date).format('YYYY-MM-DD'))
              p.text-center
                button.btn.btn-primary(type='submit') Submit
